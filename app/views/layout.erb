  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraTrail</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <style>


    .links {
       float: right;
        display: inline;
        padding-left: 0;
        margin-right: 4px;
     }

     .links a:link, .links a:visited, .links a:hover, .links a:active {
        color: #216583;
     }
</style>
  </head>
  <body>
  
    <div class="wrapper">
    <% if is_logged_in? %>
        <p class="links"><a href="/logout" class="logout">Log Out</a></p>
        <p class="links"><a href="/users/<%=current_user.id if is_logged_in?%>">My Hikes</a></p>
        <p class="links"><a href="/hikes/new">New Hike</a></p>
        <p class="links"><a href="/hikes">All Hikes</a></p>
        <p class="links"><a href="/users">All Users</a></p>
      <%end%>
  
  <% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>


        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>SinatraTrail</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
